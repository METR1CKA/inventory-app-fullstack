    <script type="text/javascript">
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 1000,
        })

        document.addEventListener('DOMContentLoaded', function () {
            const tableId = '{{ table_id }}'
            const tableElement = document.querySelector(`#${tableId}`)

            if (tableElement) {
                // InicializaciÃ³n de DataTable
                const dataTable = new DataTable(tableElement, {
                    responsive: true,
                    paging: true,
                    lengthChange: false,
                    searching: true,
                    ordering: true,
                    order: [[0, 'desc']],
                    info: true,
                    autoWidth: false,
                    buttons: ['copy', 'csv', 'excel', 'pdf', 'print', 'colvis'],
                    columnDefs: [{ orderable: false, targets: 'no-sort' }],
                })

                // Mostrar botones
                dataTable
                    .buttons()
                    .container()
                    .appendTo(`#${tableId}_wrapper .col-md-6:eq(0)`)
            }

            // Manejo de Toasts en session
            let key = null

            const success = "{{ session.has('success-toast') ? session.get('success-toast') : null }}"
            const error = "{{ session.has('error-toast') ? session.get('error-toast') : null }}"

            if (success !== 'null') {
                key = 'success-toast'

                Toast.fire({
                    icon: 'success',
                    title: success,
                })
            }

            if (error !== 'null') {
                key = 'error-toast'

                Toast.fire({
                    icon: 'error',
                    title: error,
                })
            }

            if (key) {
                setTimeout(() => {
                    fetch(`/api/v1/forget-toast/${key}`, { method: 'POST' })
                }, 1500)
            }
        })
    </script>
