    <script>
        $(function () {
            $('#{{ table_id }}')
                .DataTable({
                    responsive: true,
                    paging: true,
                    lengthChange: false,
                    searching: true,
                    ordering: true,
                    order: [[0, 'desc']],
                    info: true,
                    autoWidth: false,
                    buttons: ['copy', 'csv', 'excel', 'pdf', 'print', 'colvis'],
                    columnDefs: [{ orderable: false, targets: 'no-sort' }],
                })
                .buttons()
                .container()
                .appendTo('#{{ table_id }}_wrapper .col-md-6:eq(0)')
        })

        $(document).ready(function () {
            $('#{{ create_modal }}').submit(function (event) {
                event.preventDefault()

                let formData = $(event.target).serialize()

                showOverlay('{{ create_modal }}')

                $.ajax({
                    url: '{{ url }}',
                    method: 'POST',
                    data: formData,
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-CSRF-TOKEN': '{{ csrfToken }}'
                    },
                    success: function (response, x) {
                        hideOverlay('{{ create_modal }}')

                        $('#{{ create_modal }}').modal('hide')

                        Toast.fire({
                            icon: 'success',
                            title: response.message,
                        })

                        setTimeout(() => {
                            location.reload()
                        }, 2000)
                    },
                    error: function (xhr, status, error) {
                        hideOverlay('{{ create_modal }}')

                        console.error('response: ', xhr.responseJSON)
                        console.error('error: ', error)
                        console.error('status: ', status)

                        Toast.fire({
                            icon: 'error',
                            title: xhr.responseJSON.message,
                        })
                    }
                })
            })

            $('#{{ edit_modal }}').submit(function (event) {
                event.preventDefault()

                let form = $(event.target)

                let id = form.find('input[name="id"]').val()

                let formData = form.serialize().replace(/&?id=[^&]*/g, '')

                showOverlay('{{ edit_modal }}')

                $.ajax({
                    url: `{{ url }}/${id}`,
                    method: 'PUT',
                    data: formData,
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-CSRF-TOKEN': '{{ csrfToken }}'
                    },
                    success: function (response, x) {
                        hideOverlay('{{ edit_modal }}')

                        $('#{{ edit_modal }}').modal('hide')

                        Toast.fire({
                            icon: 'success',
                            title: response.message,
                        })

                        setTimeout(() => {
                            location.reload()
                        }, 2000)
                    },
                    error: function (xhr, status, error) {
                        hideOverlay('{{ edit_modal }}')

                        console.error('response: ', xhr.responseJSON)
                        console.error('error: ', error)
                        console.error('status: ', status)

                        Toast.fire({
                            icon: 'error',
                            title: xhr.responseJSON.message,
                        })
                    }
                })
            })

            const success_toast = "{{ flashMessages.get('success-toast') }}"
            const error_toast = "{{ flashMessages.get('error-toast') }}"

            if (success_toast != "undefined") {
                Toast.fire({
                    icon: 'success',
                    title: success_toast,
                })
            }

            if (error_toast != "undefined") {
                Toast.fire({
                    icon: 'error',
                    title: error_toast,
                })
            }
        })
    </script>
